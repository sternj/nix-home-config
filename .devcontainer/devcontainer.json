{
    "name": "Nix Home Manager Dev",
    "build": {
      "dockerfile": "Dockerfile"
    },
    "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
    },
    "postCreateCommand": "cp -r /workspaces/${localWorkspaceFolderBasename}/* ~/.config/home-manager && cd ~/.config/home-manager && ./gen_local_info.sh && home-manager switch",
    "remoteUser": "vscode"
  }
  